
@{
    ViewBag.Title = "流程模板";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Content/Plugins/ace/assets/js/jquery.dataTables.min.js"></script>
<script src="~/Content/Plugins/ace/assets/js/jquery.dataTables.bootstrap.min.js"></script>
<div class="row">
    <div class="col-sm-12">
        <h3 class="header blue lighter smaller">
            流程模板列表
        </h3>
        <div class="row">
            <div class="col-xs-12">
                <div class="row">
                    <div class="col-sm-3 form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="txtkey">
                                关键词
                            </label>
                            <div class="col-sm-9">
                                <input onkeyup="refreshDataTable();" type="text" id="txtkey"
                                       placeholder="key/模板名称 "
                                       class="col-xs-10 col-sm-10">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="selstate">
                                状态
                            </label>
                            <div class="col-sm-9">
                                <select id="selstate" class="col-xs-10 col-sm-10" onchange="refreshDataTable();">
                                    <option selected="selected" value="-1">请选择</option>
                                    <option value="1">启用</option>
                                    <option value="0">禁用</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 form-horizontal" role="form">
                        <span class="input-group-btn" onclick="refreshDataTable();">
                            <button type="button"
                                    class="btn btn-inverse btn-white">
                                <span class="ace-icon fa fa-search icon-on-right bigger-110"></span>
                                查询
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix">
            <div class="pull-left tableTools-container">
                <div class="dt-buttons btn-overlap btn-group">
                    <button type="button" class="btn btn-inverse btn-white"
                            onclick="edit('')">
                        添加模板
                    </button>
                </div>
            </div>
        </div>

        <table id="dynamic-table" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th class="center" style="max-width: 50px; min-width:50px; width: 50px;">
                        序号
                    </th>
                    <th class="center col-sm-2">key</th>
                    <th class="center col-sm-2">模板名称 </th>
                    <th class="center col-sm-2">创建时间 </th>
                    <th class="center col-sm-2">创建人 </th>
                    <th class="center col-sm-1">状态</th>
                    <th class="center col-sm-3">操作</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<script type="text/javascript">
    var dynamictable;
    function loadPageInit() {
        dynamictable = $("#dynamic-table").dataTable({
            language: lang,  //提示信息
            autoWidth: false,  //禁用自动调整列宽
            stripeClasses: ["odd", "even"],  //为奇偶行加上样式，兼容不支持CSS伪类的场合
            processing: true,  //隐藏加载提示,自行处理
            serverSide: true,  //启用服务器端分页
            searching: false,  //禁用原生搜索
            orderMulti: false,  //启用多列排序
            renderer: "bootstrap",  //渲染样式：Bootstrap和jquery-ui
            pagingType: "simple_numbers",  //分页样式：simple,simple_numbers,full,full_numbers
            "ordering": true,
            "order": [[3, "desc"]],
            columnDefs: [{
                orderable: false,//禁用排序
                targets: [0, 6]   //指定的列
            }],
            "fnInitComplete": function (oSettings, json) {
            },
            ajax: function (data, callback, settings) {
                //ajax请求数据
                $.ajax({
                    url: "../Flow/GetTmpList",
                    type: 'POST',
                    cache: false,  //禁用缓存
                    data: {
                        key: escape($.trim($("#txtkey").val())),
                        state: $.trim($("#selstate").val()),
                        start: data.start,
                        orderfiled: data.columns[data.order[0].column].data,
                        dir: data.order[0].dir,
                        length: data.length
                    },  //传入组装的参数
                    dataType: "json",
                    success: function (result) {
                        if (result.code == "200") {
                            setTimeout(function () {
                                //封装返回数据
                                var returnData = {};
                                returnData.draw = data.draw;//这里直接自行返回了draw计数器,应该由后台返回
                                returnData.recordsTotal = result.totle;//返回数据全部记录
                                returnData.recordsFiltered = result.totle;//后台不实现过滤功能，每次查询均视作全部结果
                                returnData.data = result.data;//返回的数据列表
                                callback(returnData);
                            }, 200);
                        }
                        else {
                            layer.alert(result.message);
                        }
                    }
                });
            },
            columns: [
                {
                    "data": "index", 'sClass': "text-center"
                },
                {
                    "data": "key", 'sClass': "text-center"
                },
                {
                    "data": "TmpName", 'sClass': "text-center"
                },
                {
                    "data": "CreateTime", 'sClass': "text-center", render: function (innerData, sSpecific, oData) {
                        if (!$.isempty(oData.CreateTime)) {
                            return ChangeDateFormat(oData.CreateTime);
                        }
                        return "";
                    }
                },
                {
                    "data": "createuser", 'sClass': "text-center"
                },
                {
                    "data": "State",
                    'sClass': "text-center ",
                    render: function (innerData, sSpecific, oData) {
                        if (oData.State == 1) {
                            return '<span class="label label-sm label-success">启用</span>';
                        }
                        if (oData.State == 0) {
                            return '<span class="label label-sm label-warning">禁用</span>';
                        }
                    }
                },
                {
                    "data": "State", 'sClass': "text-center", render: function (innerData, sSpecific, oData) {
                        var html = '<div class="hidden-sm hidden-xs action-buttons">';
                        html += '<a class="blue" href="#" onclick="edit(\'' + oData.ID + '\')">';
                        html += '编辑';
                        html += '  </a> ';

                        html += ' <a class="blue" href="#"  onclick="update(\'' + oData.ID + '\',' + oData.State + ',0)">';
                        if (oData.State == 1) {
                            html += '禁用';
                        } else {
                            html += '启用';
                        }
                        html += ' </a> ';

                        html += '    <a class="blue" href="#" onclick="openDesign(\'' + oData.key + '\',\'' + oData.TmpName + '\')">';
                        html += '流程设计';
                        html += '  </a> ';
                        html += '    <a class="blue" href="#" onclick="openVarlist(\'' + oData.key + '\',\'' + oData.TmpName + '\')">';
                        html += '变量设置';
                        html += '  </a> ';
                        html += '    <a class="blue" href="#" onclick="del(\'' + oData.ID + '\')">';
                        html += '删除';
                        html += '  </a> ';

                        html += '    </div> ';
                        return html;
                    }
                }
            ]
        });
    }
    $(document).ready(function () {
        loadPageInit();
    });
    function edit(id) {
        window.location.href = "../Flow/AddTmp?id=" + id;
    }
    //FlowRoleUserList
    function openDesign(key, tmpname) {
            window.location.href = "../Flow/FlowDesign?key=" + key;
    }

    //FlowRoleUserList
    function openVarlist(key, tmpname) {
        layer.open({
            type: 2,
            title: tmpname + '变量列表 ',
            shadeClose: true,
            shade: 0.8,
            area: ['95%', '90%'],
            content: '../Flow/FlowRoleUserList?rolecode=' + rolecode + "&rolename=" + rolename//iframe的url
        });
    }

    function update(id, state, field) {
        var message = "你确认要" + (field == 0 ? (state == 1 ? "禁用" : "启用") : (state == 1 ? "隐藏" : "显示")) + "该流程吗？";
        layer.confirm(message, function () {
            $.ajax({
                url: "../flow/UpdateTmpState",
                type: 'POST',
                data: {
                    id: id,
                    state: state == 1 ? 0 : 1
                },
                beforeSend: function () {
                    startloading();
                },
                complete: function () {
                    closeloading();
                },
                success: function (data) {
                    if (data.code == "200") {
                        layer.alert(data.message);
                        refreshDataTable();
                    } else {
                        layer.alert(data.message);
                    }
                },
                dataType: "json"
            });
        });
    }

    function del(id) {
        var message = "你确认要删除该模板吗？";
        layer.confirm(message, function () {
            $.ajax({
                url: "../flow/TmpDel",
                type: 'POST',
                data: {
                    id: id,
                },
                beforeSend: function () {
                    startloading();
                },
                complete: function () {
                    closeloading();
                },
                success: function (data) {
                    if (data.code == "200") {
                        layer.alert(data.message);
                        refreshDataTable();
                    } else {
                        layer.alert(data.message);
                    }
                },
                dataType: "json"
            });
        });
    }
    function refreshDataTable() {
        $("#dynamic-table").DataTable().ajax.reload();
    }
</script>